<h1><%= current_user.name %>のお気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>お気に入り画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
      <td><%= image_tag favorite.post.image.url %></td>
      <td><%= link_to '画像詳細', favorites_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

